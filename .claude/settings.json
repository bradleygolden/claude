{
  "hooks": {
    "PostToolUse": [
      {
        "hooks": [
          {
            "command": "cd $CLAUDE_PROJECT_DIR && mix claude.hook elixir_quality_checks",
            "type": "command"
          },
          {
            "command": "cd $CLAUDE_PROJECT_DIR && mix claude.hook related_files_check",
            "type": "command"
          }
        ],
        "matcher": "Write|Edit|MultiEdit"
      }
    ],
    "PreToolUse": [
      {
        "hooks": [
          {
            "command": "cd $CLAUDE_PROJECT_DIR && mix claude.hook pre_commit_validation",
            "type": "command"
          }
        ],
        "matcher": "Bash(git commit:*)"
      }
    ]
  }
}
